        <p class="lead">{{cheeseplate.name}}</p>
        <p class="lead">{{cheeseplate.id}}</p>
        <button type="button" class="add-cheese-button btn btn-default" data-cheese-id="{{cheese.id}}" data-toggle="modal" data-target="#cheesesOnPlateModal">Add</button>
        <button type="button" class="delete-cheeseplate-button btn btn-default" data-cheeseplate-id="{{cheeseplate.id}}">Delete Cheeseplate</button>
      </div>
      <div>
      </div>
