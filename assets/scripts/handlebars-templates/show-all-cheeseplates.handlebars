{{#each cheeseplates as |cheeseplate|}}
<div class="newest-plates">
  <ul class="list-group">
    <li class="list-group-item">
      <div class="border">
        <p class="lead">{{cheeseplate.name}}</p>
        <button type="button" class="delete-cheeseplate-button btn btn-default" data-cheeseplate-id="{{cheeseplate.id}}">Delete Cheeseplate</button>
      </div>
      <div class="change-name-of-cheeseplate text-center">
        <p class="name-change"> Change the name of this cheeseplate.</p>
          <form class="update-cheeseplate-form text-center" data-cheeseplate-id="{{cheeseplate.id}}">
            <input type="text" class="cheeseplate-name" name="cheeseplate[name]" placeholder="New cheeseplate name">
            <input type="text" class="cheeseplate-id" name="cheeseplate[id]" placeholder="Cheeseplate ID"><br>
            <button type="submit" class="change-cheeseplate-button btn btn-default">Submit</button>
          </form>
      </div>
    </li>
  </ul>
</div>
{{/each}}
